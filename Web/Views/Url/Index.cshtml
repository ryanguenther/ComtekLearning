@using System.Collections.Generic
@model System.Collections.Generic.IEnumerable<ClassLibrary1.URL_Shortener.UrlShortener>

@{
    ViewData["Title"] = "Index";
}

<h2>Url Shortener</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.OriginalUrl)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Hash)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Expiry)
                </th>
                @*<th>
                    @Html.DisplayNameFor(model => model.ID)
                </th>*@
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <a href="@Html.DisplayFor(modelItem => item.OriginalUrl)" target="_blank">@Html.DisplayFor(modelItem => item.OriginalUrl)</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hash)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Expiry)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.ID)
            </td>*@
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.ID })
            </td>
        </tr>
}
    </tbody>
</table>
